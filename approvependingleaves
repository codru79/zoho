	zemplid = var.get("Employee_ID.ID");
	zLeavetype = var.get("Leavetype.ID");
	//info zleaveid;
	param_map = Map();
	param_map.put("Notes","Automated approval");
	//param_map.put("recordid",zleaveid);
	//param_map.put("Employee_ID",zemplid);
	//param_map.put("Leave type",zLeavetype);
	//Execute the Zoho People integration task to update the user Reason for Leave field with text Automated Approval
	//response1 = zoho.people.update("P_ApplyLeave",param_map);
	//info response1;

	//vers2 using invokeurl
	inputdata = Map();
	inputdata.put("inputData",param_map);
	recordiddata = Map();
	recordiddata.put("recordid",zleaveid);
	data = List();
	data.add(recordiddata);
	data.add(inputdata);
	info data;
	updateleaverequest = invokeurl
	[
	url: "https://people.zoho.com/people/api/forms/json/P_ApplyLeave/updateRecord"
